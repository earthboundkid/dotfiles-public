[core]
	quotepath = false
	excludesfile = ~/.gitignore
	pager = delta

[interactive]
	diffFilter = delta --color-only

[user]
	name = Carl Johnson
	email = me@carlmjohnson.net
[credential]
	helper = osxkeychain

[alias]
	resolve = mergetool --tool opendiff
	hist = log --color --graph --pretty=format:'%C(bold blue)<%an>%Creset %Cgreen(%cr)%C(yellow)%d%Creset%n%s' --abbrev-commit
	ane = commit --amend --no-edit
	p = add -p
	cmp = log --color --graph --pretty=format:'%C(bold blue)<%an>%Creset %Cgreen(%cr)%C(yellow)%d%Creset%n%s' --right-only --boundary origin/master...
	code-changes = "!git log --format=format: --name-only | egrep -v '^$' | sort | uniq -c | sort -rg | head -10"
[difftool "filemerge"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[color]
	ui = true
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = green
	old = black magenta
	new = white cyan
[color "status"]
	added = cyan
	changed = blue
	untracked = magenta
[add]
	whitespace = fix
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[branch]
	autosetuprebase = always
[diff]
	algorithm = patience
[rebase]
	autostash = true
	autosquash = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[http]
	cookiefile = /Users/cjohnson/.gitcookies
[fetch]
	prune = true
[push]
	default = current

[delta]
	features = side-by-side line-numbers decorations
	syntax-theme = Solarized (light)

[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[init]
	defaultBranch = main
